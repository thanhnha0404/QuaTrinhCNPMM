<!DOCTYPE html>
<html>
<head>
  <title>User List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-4">
  <h2>User List</h2>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Name</th><th>Email</th><th>Age</th><th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% users.forEach(user => { %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.age %></td>
          <td>
            <a class="btn btn-warning btn-sm" href="/edit-user/<%= user._id %>">Edit</a>
            <a class="btn btn-danger btn-sm" href="/delete-user/<%= user._id %>">Delete</a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
  <a href="/" class="btn btn-primary">Create New</a>
</body>
</html>
